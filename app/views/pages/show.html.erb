<div class="container">
  <h1> <%= @contact.full_name  %> </h1>
  <h2> <%= @contact.email %> </h2>
  <h3> <%= @contact.phone_number %> </h3>
  <h5> <%= @contact.bio %> </h5>
  <h6> <%= @contact.friendly_created_at %> </h6>

  <%= form_tag "/contacts/#{@id}", method: "delete" do %>
    <input type="submit" class="btn btn-default" value="Delete">
    <a role="group" aria-label="Left Align" href="/contacts/<%= @contact.id%>/edit" type="button" class="btn btn-default">Edit</a>
  <% end %>
</div>
  
