<h1>Edit Contact</h1>
<%= form_tag "/contacts/#{@id}", method: "patch" do %>
  <div class="form-group">
    First Name: <input value="<%= @first_name %> " type="text" class="form-control" name="first_name">
  </div>
  <div class="form-group">
    Last Name: <input value="<%= @last_name %> " type="text" class="form-control" name="last_name">
  </div>
  <div class="form-group">
    Email: <input value="<%= @email %> " type="text" class="form-control" name="email">
  </div>
  <div class="form-group">
    Phone Number: <input value="<%= @phone_number %> " type="text" class="form-control" name="phone_number">
  </div>
  <input type="submit" class="btn btn-default" value="Update Contact">
<% end %>